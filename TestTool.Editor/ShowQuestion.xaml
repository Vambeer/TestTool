<Window x:Class="TestTool.Editor.ShowQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTool.Editor"
        mc:Ignorable="d"
        Title="Добавление вопроса" Height="300" Width="600">
    <Grid>
        <TextBox Width="Auto" Grid.Row="0" Height="200" VerticalAlignment="Top" Name="tbText" FontSize="24"></TextBox>
        <Button Name="btnAdd" Height="50" VerticalAlignment="Bottom" Width="200" HorizontalAlignment="Left" Click="btnAdd_Click">Добавить вопрос</Button>
        <Button Name="btnCancel" Height="50" VerticalAlignment="Bottom" Width="200" HorizontalAlignment="Left" Margin="200,0,0,0" Click="btnCancel_Click">Отмена</Button>
    </Grid>
</Window>
